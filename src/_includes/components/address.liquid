<address>
  {% comment %} E.g., LinkedIn {% endcomment %}
  {%- for profile in basics.profiles -%}
  <a href="{{ profile.url }}">
    {{- profile.network -}}
  </a>
  {%- endfor -%}

  {% comment %} E.g., personal website {% endcomment %}
  {% if basics.url -%}
  <a href="https://{{ basics.url }}">
    {{- basics.url -}}
  </a>
  {%- endif -%}

  {% comment %} E.g., city {% endcomment %}
  {% if basics.location.city and basics.location.countryCode -%}
  <span>
      {{- basics.location.city -}}, {{- basics.location.countryCode -}}
  </span>
  {%- endif -%}

  {% comment %} E.g., mobile {% endcomment %}
  {% if basics.phone -%}
  <a href="tel:{{ basics.phone }}">
    {{- basics.phone -}}
  </a>
  {%- endif -%}


  {%- if basics.email %}
  <a href="mailto:{{ basics.email }}">
    {{- basics.email -}}
  </a>
  {%- endif %}
</address>